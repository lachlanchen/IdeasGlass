{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideasglass.dev/schemas/plan.schema.json",
  "title": "GoalPlan",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "$ref": "#/$defs/uuid" },
    "goal_id": { "$ref": "#/$defs/uuid" },
    "title": { "type": "string", "minLength": 1, "maxLength": 256 },
    "strategy": { "type": "string", "maxLength": 8192 },
    "assumptions": { "type": "string", "maxLength": 4096 },
    "risks": { "type": "string", "maxLength": 4096 },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "maxLength": 64 },
          "target": { "type": "number" },
          "unit": { "type": "string", "maxLength": 16 }
        },
        "required": ["name"]
      },
      "maxItems": 16
    },
    "status": { "type": "string", "enum": ["draft", "active", "paused", "done", "archived"] },
    "created_at": { "$ref": "#/$defs/iso_datetime" },
    "updated_at": { "$ref": "#/$defs/iso_datetime" }
  },
  "required": ["id", "goal_id", "title", "status", "created_at", "updated_at"],
  "$defs": {
    "uuid": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
    "iso_datetime": { "type": "string", "format": "date-time" }
  }
}

