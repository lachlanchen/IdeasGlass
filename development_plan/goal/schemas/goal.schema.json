{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideasglass.dev/schemas/goal.schema.json",
  "title": "Goal",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "$ref": "#/$defs/uuid" },
    "user_id": { "$ref": "#/$defs/uuid" },
    "parent_life_goal_id": { "$ref": "#/$defs/uuid" },
    "title": { "type": "string", "minLength": 1, "maxLength": 256 },
    "outcome": { "type": "string", "maxLength": 4096 },
    "deadline": { "$ref": "#/$defs/iso_datetime" },
    "priority": { "type": "integer", "minimum": 0, "maximum": 5 },
    "status": { "type": "string", "enum": ["not_started", "in_progress", "blocked", "done", "canceled"] },
    "progress_percent": { "type": "number", "minimum": 0, "maximum": 100 },
    "created_at": { "$ref": "#/$defs/iso_datetime" },
    "updated_at": { "$ref": "#/$defs/iso_datetime" },
    "deleted_at": { "$ref": "#/$defs/iso_datetime" }
  },
  "required": ["id", "user_id", "title", "status", "created_at", "updated_at"],
  "$defs": {
    "uuid": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
    "iso_datetime": { "type": "string", "format": "date-time" }
  }
}

