{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideasglass.dev/schemas/prophecy_entry.schema.json",
  "title": "ProphecyEntry",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "$ref": "#/$defs/uuid" },
    "user_id": { "$ref": "#/$defs/uuid" },
    "goal_id": { "$ref": "#/$defs/uuid" },
    "plan_id": { "$ref": "#/$defs/uuid" },
    "step_id": { "$ref": "#/$defs/uuid" },
    "intent_text": { "type": "string", "maxLength": 4096 },
    "due_at": { "$ref": "#/$defs/iso_datetime" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "commitment_level": { "type": "string", "enum": ["considering", "planning", "committed"] },
    "status": { "type": "string", "enum": ["planned", "in_progress", "fulfilled", "missed", "canceled"] },
    "created_at": { "$ref": "#/$defs/iso_datetime" },
    "updated_at": { "$ref": "#/$defs/iso_datetime" },
    "realized_at": { "$ref": "#/$defs/iso_datetime" }
  },
  "required": ["id", "user_id", "intent_text", "status", "created_at", "updated_at"],
  "$defs": {
    "uuid": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
    "iso_datetime": { "type": "string", "format": "date-time" }
  }
}

