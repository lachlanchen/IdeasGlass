{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideasglass.dev/schemas/idea.schema.json",
  "title": "Idea",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "$ref": "#/$defs/uuid" },
    "user_id": { "$ref": "#/$defs/uuid" },
    "title": { "type": "string", "minLength": 1, "maxLength": 256 },
    "summary": { "type": "string", "maxLength": 8192 },
    "language": { "type": "string", "description": "BCP-47 code (e.g. en, zh-CN)", "maxLength": 32 },
    "status": { "type": "string", "enum": ["active", "archived", "deleted"] },
    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 64 },
      "maxItems": 64,
      "uniqueItems": true
    },
    "importance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "score": { "type": "number", "minimum": 0 },
        "occurrence_count": { "type": "integer", "minimum": 0 },
        "urgency": { "type": "number", "minimum": 0, "maximum": 1 },
        "recency_score": { "type": "number", "minimum": 0 }
      },
      "required": ["score", "occurrence_count"]
    },
    "evidence_count": { "type": "integer", "minimum": 0 },
    "latest_occurrence_at": { "$ref": "#/$defs/iso_datetime" },
    "goal_ids": {
      "type": "array",
      "items": { "$ref": "#/$defs/uuid" },
      "uniqueItems": true,
      "maxItems": 64
    },
    "created_at": { "$ref": "#/$defs/iso_datetime" },
    "updated_at": { "$ref": "#/$defs/iso_datetime" },
    "deleted_at": { "$ref": "#/$defs/iso_datetime" },
    "references": {
      "type": "array",
      "description": "Optional embedded evidence list when fetching detail",
      "items": { "$ref": "idea_reference.schema.json" }
    }
  },
  "required": ["id", "user_id", "title", "status", "created_at", "updated_at"],
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "iso_datetime": {
      "type": "string",
      "format": "date-time"
    }
  }
}

