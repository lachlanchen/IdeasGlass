{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideasglass.dev/schemas/creation.schema.json",
  "title": "Creation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "$ref": "#/$defs/uuid" },
    "user_id": { "$ref": "#/$defs/uuid" },
    "title": { "type": "string", "minLength": 1, "maxLength": 256 },
    "creation_type": {
      "type": "string",
      "enum": [
        "research_proposal",
        "business_plan",
        "video_project",
        "story_post",
        "novel_project",
        "script_project",
        "music_track",
        "small_file",
        "other"
      ]
    },
    "status": { "type": "string", "enum": ["draft", "in_progress", "review", "published", "archived"] },
    "summary": { "type": "string", "maxLength": 4096 },
    "language": { "type": "string", "maxLength": 32 },
    "tags": { "type": "array", "items": { "type": "string", "maxLength": 64 }, "uniqueItems": true, "maxItems": 64 },
    "meta": { "$ref": "creation_meta.schema.json" },
    "assets": { "type": "array", "items": { "$ref": "asset.schema.json" }, "maxItems": 256 },
    "sections": { "type": "array", "items": { "$ref": "section.schema.json" }, "maxItems": 500 },
    "idea_ids": { "type": "array", "items": { "$ref": "#/$defs/uuid" }, "uniqueItems": true },
    "goal_ids": { "type": "array", "items": { "$ref": "#/$defs/uuid" }, "uniqueItems": true },
    "outcome_url": { "type": "string", "format": "uri" },
    "created_at": { "$ref": "#/$defs/iso_datetime" },
    "updated_at": { "$ref": "#/$defs/iso_datetime" },
    "deleted_at": { "$ref": "#/$defs/iso_datetime" }
  },
  "required": ["id", "user_id", "title", "creation_type", "status", "created_at", "updated_at"],
  "$defs": {
    "uuid": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
    "iso_datetime": { "type": "string", "format": "date-time" }
  }
}

